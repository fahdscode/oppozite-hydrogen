{
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
        {
            "source": "/shop",
            "has": [
                {
                    "type": "query",
                    "key": "collection"
                }
            ],
            "destination": "/api/seo"
        },
        {
            "source": "/product/:handle",
            "destination": "/api/seo"
        },
        {
            "source": "/:path*",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                }
            ]
        }
    ]
}